<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Users Bests

    <a data-toggle="collapse" href="#user_users_bests_new_form">
      Add users best
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.users_bests.each do |users_best| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to users_best, users_best %>

        <%= link_to users_best, method: :delete, data: { confirm: "Do you really want to delete this users_best" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_users_bests_new_form">
        <%= render partial: "users/user_users_bests_new_form" %>
      </div>
    </div>

  </ul>
</div>
