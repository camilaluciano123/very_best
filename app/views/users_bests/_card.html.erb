<div class="card mb-3">
  <h2 class="card-header h4">
    Users Best #<%= users_best.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Dishes</dt>
      <!-- Display dishes_id start -->
      <dd>
        <% if @users_best.dishes.present? %>
          <%= link_to users_best.dishes, users_best.dishes %>
        <% end %>
      </dd>
      <!-- Display dishes_id end -->

      <dt>Venue</dt>
      <!-- Display venue_id start -->
      <dd>
        <% if @users_best.venue.present? %>
          <%= link_to users_best.venue, users_best.venue %>
        <% end %>
      </dd>
      <!-- Display venue_id end -->

      <dt>User</dt>
      <!-- Display user_id start -->
      <dd>
        <% if @users_best.user.present? %>
          <%= link_to users_best.user, users_best.user %>
        <% end %>
      </dd>
      <!-- Display user_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back users_best, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link users_best start -->
      <div class="col">
        <%= link_to edit_users_best_url(users_best), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link users_best end -->

      <!-- Delete link users_best start -->
      <div class="col">
        <%= link_to users_best, method: :delete, data: { confirm: "Do you really want to delete this users_best?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link users_best end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(users_best.updated_at) %> ago
  </div>
</div>
